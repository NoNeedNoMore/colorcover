#header.navbar.navbar-default.navbar-static-top(role='navigation')
	.container
		.navbar-header
			button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
		.navbar-collapse.collapse
			ul.nav.navbar-nav
				li(class = view == 'index' ? 'active' : '' ): a(href="/index.html") Colorcover
				li(class = view == 'single' ? 'active' : '' ): a(href="/games.html/services/single") Single
				li(class = view == 'multi' ? 'active' : '' ): a(href="/games.html/services/multi") Multi
				li(class = view == 'topics' ? 'active' : '' ): a(href="/topics.html") Forum
				if (session && session.roles && session.roles.indexOf('admin') > -1) || (session && session.perks && session.perks.indexOf('all') > -1)
					li(class = view == 'users' ? 'active' : '' ): a(href="/users.html") Users
					li(class = view == 'roles' ? 'active' : '' ): a(href="/roles.html") Roles
					li(class = view == 'perks' ? 'active' : '' ): a(href="/perks.html") Perks
					li(class = view == 'sql' ? 'active' : '' ): a(href="/sql.html") sql
			ul.nav.navbar-nav.navbar-right
				if (session && session.username)
					li: a(href="/users.html/" + session.username) Здравствуйте, #{session.username} !
					li: a.logout(href="/users.json/services/logout") Выйти
				else
					form#fastLogin.navbar-form.navbar-right(role="form")
						.form-group
							input.form-control.input-username(type="text" name="username" placeholder="мыло или логин")
							| &nbsp;
						.form-group
							input.form-control.input-password(type="password" name="password" placeholder="пароль")
							| &nbsp;
						button.btn.btn-success(type="submit") Войти или зарегистрироваться